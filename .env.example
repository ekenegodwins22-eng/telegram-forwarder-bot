# Telethon Configuration (Owner Only for Historical Forwarding)
# Get your API ID and API Hash from my.telegram.org
TELETHON_API_ID=
TELETHON_API_HASH=

# Owner Configuration
# Get your Telegram User ID from a bot like @userinfobot
OWNER_ID=0

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Source Channel ID (Channel A - where messages come from)
# Format: -100 followed by the channel ID (e.g., -1001234567890)
SOURCE_CHANNEL_ID=-1001234567890

# Destination Channel ID (Channel B - where messages are forwarded to)
# Format: -100 followed by the channel ID (e.g., -1009876543210)
DESTINATION_CHANNEL_ID=-1009876543210

# Rate Limiting Configuration
# Forward 50 messages every 20 minutes
MESSAGES_PER_BATCH=50
BATCH_INTERVAL_MINUTES=20

# Database Configuration
DATABASE_PATH=forwarder_bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=forwarder_bot.log

# Feature Flags
FORWARD_HISTORICAL_MESSAGES=true
FORWARD_REAL_TIME_MESSAGES=true
